@model MVCZoolandia.ViewModels.AnimalHabitatViewModel

@{
    ViewData["Title"] = "Animal List";
}
<title>@ViewData["Title"] - Zoonlandia App</title>
<h2>Animal List</h2>

<p>Hello from the Animal Index View Template!</p>
@Html.ActionLink("Add An Animal", "Create")
@using (Html.BeginForm("Index", "Employee"))
{
    <table>
        <th>Name</th>
        @foreach (var item in Model.Animals)
        {

            <tr>
                <td>@Html.DisplayFor(ModelItem => item.Name)</td>
                <td>@Html.DisplayFor(ModelItem => item.HabitatType)</td>
                <td>@Html.DisplayFor(ModelItem => item.EmployeeFirstName)</td>


            </tr>

        }

    </table>
}
